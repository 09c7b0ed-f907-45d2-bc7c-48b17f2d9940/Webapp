!/package.json
!/pnpm-lock.yaml
!/postcss.config.mjs
!/tsconfig.json
!/next.config.ts
!/next-env.d.ts
!/eslint.config.mjs
!/components.json
!/tailwind.config.js

# Add source files
!/src/**
!/public/**